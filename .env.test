# Test Environment Variables
# This file contains minimal configuration for running tests
#
# IMPORTANT: Update DATABASE_URL to point to your test database
# You can use the same database as development, or create a separate test database
# Example: postgresql://user:password@localhost:5432/ordakdelivery_test

# Application
NODE_ENV=test
PORT=3001
API_VERSION=v1

# Database - REQUIRED: Update this to point to your PostgreSQL database
# You can use the same database as development (tests create/cleanup data with unique identifiers)
# Or create a separate test database: createdb ordakdelivery_test
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ordakdelivery

# Mapbox - Dummy token for tests (not used in mocked tests)
MAPBOX_ACCESS_TOKEN=pk.test-token-for-testing-purposes-only

# Shopify - Dummy values for tests
SHOPIFY_API_KEY=test-api-key
SHOPIFY_API_SECRET=test-api-secret
SHOPIFY_SHOP_DOMAIN=test-shop.myshopify.com
SHOPIFY_WEBHOOK_SECRET=test-webhook-secret

# Security - JWT (test secrets)
JWT_ACCESS_SECRET=test-jwt-access-secret-min-32-characters-long
JWT_REFRESH_SECRET=test-jwt-refresh-secret-min-32-characters-long

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Optional Services (disabled for tests)
TRACCAR_ENABLED=false
TWILIO_ENABLED=false
SENDGRID_ENABLED=false
REDIS_ENABLED=false
ENABLE_PELIAS_GEOCODING=false
