# API Configuration
API_BASE_URL=https://api.ordakdelivery.com/api/v1
API_TIMEOUT=30000

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=your_mapbox_public_token_here
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12

# App Configuration
APP_NAME=Ordak Driver
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Environment
ENVIRONMENT=development

# Push Notifications (Firebase)
FIREBASE_SENDER_ID=your_sender_id_here

# Location Services
LOCATION_UPDATE_INTERVAL=15000
BACKGROUND_LOCATION_INTERVAL=30000

# Offline Mode
ENABLE_OFFLINE_MODE=true
CACHE_DURATION=86400000
