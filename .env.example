# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://ordak:ordak_dev_password@localhost:5432/ordakdelivery

# Mapbox
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Shopify
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret_here

# Tracking (Optional - Traccar)
TRACCAR_ENABLED=false
TRACCAR_API_URL=https://traccar.example.com
TRACCAR_API_TOKEN=your_traccar_token_here

# Notifications
# SMS Provider (Twilio)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Email Provider (SendGrid)
SENDGRID_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@ordakdelivery.com
SENDGRID_FROM_NAME=Ordak Delivery

# Security
JWT_ACCESS_SECRET=your_access_token_secret_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_in_production
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache (Optional - Redis)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_PELIAS_GEOCODING=false
PELIAS_API_URL=http://localhost:4000
